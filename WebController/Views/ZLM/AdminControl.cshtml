@using ZoneLighting.ZoneProgramNS
@model ZoneLighting.ZLM
@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "ZonesControl" }))
{
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">
						<i class="fa fa-bar-chart-o"></i> Admin
					</h3>
				</div>
				<div class="panel-body">
					<div class="fa-align-center">
						@Html.ActionLink("Create ZLM", "CreateZLM", "ZLM", null, new { @class = "btn btn-primary" })
						@Html.ActionLink("Dispose ZLM", "DisposeZLM", "ZLM", null, new { @class = "btn btn-primary" })
						@Html.ActionLink("Save", "Save", "ZLM", null, new { @class = "btn btn-primary" })
					</div>
				</div>
			</div>
			
		</div>
	</div>
}